extends layout

block variables
  - var title = "Deine Werte"

block content
  include firstModal
  include successModalValues
  .card
    .card-body
      h2.text-center Deine Werte, #{user.profile.firstName} #{user.profile.lastName} 
      if valueList.length > 0
        h6.text-muted Deine Werte (sortiert nach Wichtigkeit)
        ul.list-group.list-group-flush
        - valueList.forEach(function(entry){
          li.list-group-item= entry.name
        - });
      else 
        .container.decisionCenter
          p Entscheide, was wichtiger f√ºr dich ist: 
          .btn.btn-dark.btn-block.decisionBtn(onclick='selected(0)' role='button' id='#opt0') Option 1
          .btn.btn-dark.btn-block.decisionBtn(onclick='selected(1)' role='button' id='#opt1') Option 2

  script(type='text/javascript') var showModal =!{JSON.stringify(showModal)}; var attr =!{JSON.stringify(attr)}
  script(src='js/values.js')